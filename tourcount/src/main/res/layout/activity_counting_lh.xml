<LinearLayout android:id="@+id/countingScreenLH"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
			  android:orientation="vertical">

    <!-- separating white line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/BrightGray"
        android:paddingTop="1dp" />

    <!-- insert the tour notes in here -->
        <LinearLayout
            android:id="@+id/tourNotesLayoutLH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:orientation="vertical" />

        <!-- separating white line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/BrightGray"
            android:paddingTop="1dp" />

        <!-- insert spinner widget_counting_head1LH here -->
        <Spinner
            android:id="@+id/countHead1SpinnerLH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- separating white line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/BrightGray"
            android:paddingTop="2dp" />

        <!-- insert head2 in here -->
        <LinearLayout
            android:id="@+id/countHead2LayoutLH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:orientation="vertical" />

        <!-- separating white line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/BrightGray"
            android:paddingTop="2dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- insert the internal counts in here -->
                <LinearLayout
                    android:id="@+id/countCountiLayoutLH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:orientation="vertical"
                    />

                <!-- separating white line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/BrightGray"
                    android:paddingTop="2dp" />

            </LinearLayout>
        </ScrollView>
</LinearLayout>
