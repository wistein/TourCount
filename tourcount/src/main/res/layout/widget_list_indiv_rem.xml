<?xml version="1.0" encoding="utf-8"?>

<!-- widget_list_indiv_rem.xml
 used by ListIndividualWidget.kt and ShowResultsActivity.kt.
 Shows individual line of remark -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="3dp"
    tools:context=".ShowResultsActivity">

        <TextView
            android:id="@+id/txtBInd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="start"
            android:hint="@string/rem_Ind"
            android:maxLines="1"
            android:padding="4sp"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtBemInd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="0.75"
            android:gravity="start|top"
            android:padding="4sp"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

</LinearLayout>
